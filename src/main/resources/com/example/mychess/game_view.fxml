<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.mychess.GameController">
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="MyChess" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <GridPane fx:id="chessBoard" alignment="CENTER" gridLinesVisible="true" style="-fx-border-color: black;" BorderPane.alignment="CENTER">

        </GridPane>
    </center>

    <left>
        <VBox alignment="TOP_LEFT" spacing="15" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <Label fx:id="whitePlayerLabel" style="-fx-font-size: 16px;" text="White: 01:00" />
            <Label fx:id="blackPlayerLabel" style="-fx-font-size: 16px;" text="Black: 01:00" />
            <Label fx:id="playerTurnLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Black's turn" />
        </VBox>
    </left>
</BorderPane>
